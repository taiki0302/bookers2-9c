<% if @model == "user" %>
  <% if @users.present? %>
    <table class="table table-sm user-index">
      <h2>Users search for " <%= params[:search] %> "</h2>
      <thead>
        <th>image</th>
        <th>name</th>
        <th></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", "/users/#{user.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2>Users search for " <%= params[:search] %> "</h2>
      ・該当のユーザーはいません
    <% end %>
<% elsif @model == "book" %>
  <% if @books.present? %>
    <table class="table book-index">
      <h2>Books search for " <%= params[:search] %> "</h2>
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
           </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <h2>Books search for " <%= params[:search] %> "</h2>
    ・該当の本はありません
  <% end %>
  <% elsif @model == "group" %>
  <% if @groups.present? %>
    <table class="table book-index">
      <h2>Groups search for " <%= params[:search] %> "</h2>
      <thead>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
      </thead>
      <tbody>
        <% @groups.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(group.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%>
              <% end %>
            </td>
            <td><%= link_to group.name, group_path(group) %></td>
            <td><%= group.introduction %></td>
           </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <h2>Groups search for " <%= params[:search] %> "</h2>
    ・該当のグループはありません
  <% end %>
<% end %>