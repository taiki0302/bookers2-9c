<table class='table'>
  <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  
      <tr>
      <th>follows</th>
      <td>
        <%= link_to user_followings_path(user) do %>
          <%= user.followings.count %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>followers</th>
      <td>
        <%= link_to user_followers_path(user) do %>
          <%= user.followers.count %></td>
        <% end %>
      </tr>
</table>
        <% if current_user != user %>
        <td>
          <% if current_user.following?(user) %>
          <tr>
          <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
          <td><% if current_user != @user %>
          <%= link_to 'チャットを始める', chat_path(@user.id) %>
          <% end %>   
          </td>
          </tr>
          <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
        <% end %>
        </td>
        <% end %>
<div class='row'>
  <%= link_to edit_user_path(user) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
  <% end %>
  
</div>